<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="movie" type="com.thedevwolf.mvvmdemo.vm.adapter.MovieViewModel"/>
    </data>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                app:imageUrl="@{movie.movieImage}"
                app:placeholder="@{@drawable/placeholder1}"
                android:layout_height="200dp"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{movie.movieTitle}"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
    </LinearLayout>
</layout>